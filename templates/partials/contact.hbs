<div class="container-fluid mt-5 about-style " id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact us</h1>
            <p class="text-center sub-heading">we will be happy to help you</p>
            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="post">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="text" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                                placeholder="Enter Name" name="name">
                        </div>
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter email" name="email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                        <div>
                            <label for="exampleInputEmail1">Phone number</label>
                            <input type="number" class="form-control" id="exampleInputName"
                                placeholder="Enter your phone number" name="phone">
                            <label for="exampleInputEmail1">Message</label>
                            <input type="text" class="form-control" id="exampleInputName"
                                placeholder="Enter Your Message" name="message">
                        </div>


                        <button type="submit" class="btn-style btn-primary my-5">Submit</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>